# Ghostty Config
# https://ghostty.org/docs/config/reference

# Font
font-family = JetBrainsMono Nerd Font Mono
font-size = 12.8

# Use compatible TERM for remote hosts lacking xterm-ghostty terminfo
# NOTE: Ubuntu 25.05+, Debian 13+ ship with ncurses >= 6.5-20241228
term = xterm-256color

# Set sudo wrapper to preserve terminfo.
# Enable SSH environment variable compatibility.
shell-integration-features = sudo,ssh-env
keybind = shift+enter=text:\x1b\r

# Slowdown mouse scrolling
mouse-scroll-multiplier = 0.95

# no titlebar. rounded corners, borders
macos-titlebar-style = hidden
window-padding-balance = true
